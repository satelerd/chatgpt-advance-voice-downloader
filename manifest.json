{
  "manifest_version": 3,
  "name": "Descargar Audio ChatGPT",
  "version": "1.0",
  "description": "Extensi√≥n para descargar archivos de audio desde la API de ChatGPT",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://chat.openai.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*"],
      "js": ["content.js"]
    }
  ]
}